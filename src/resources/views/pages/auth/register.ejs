<!DOCTYPE html>
<html lang="en">
  <head>
    <title>ثبت نام در گیومه</title>
    <%- include('../../partials/head'); %>
    <style>
      ul li {
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 1px solid #eee;
      }
    </style>
  </head>

  <body>
    <!-- ***** Preloader Start ***** -->
    <%- include('../../partials/preloader'); %>

    <!-- ***** Preloader End ***** -->

    <!-- Header -->
    <%- include('../../partials/header'); %>


    <div style="display: flex; margin: auto">
      <div class="row" style="margin: auto; width: 1600px">
        <img
          style="width: 40%  ;margin: auto"
          src="../../../../../public/assets/images/regsiter2.png"
          alt=""
        />

        <div style="margin-top:150px; width: 40%">
          <% if (messages.error) { %>
          <div
            class="alert alert-danger alert-dismissible fade show"
            role="alert"
            style="width: 382px"
          >
            <%- messages.error %>
          </div>
          <% } %>

          <form
            id="contact"
            action="/auth/register"
            method="post"
            style="margin: auto"
          >
            <div class="row" style="display: block">
              <div class="col-md-6 col-sm-12" style="direction: rtl">
                <fieldset>
                  <input
                    style="
                      width: 100%;
                      height: 46px;
                      border: 1px solid #eee;
                      font-size: 13px;
                      text-transform: uppercase;
                      font-weight: 500;
                      color: #7a7a7a;
                      outline: none;
                      padding: 0px 15px;
                      margin-bottom: 30px;
                      border-radius: 5px;
                    "
                    name="name"
                    type="text"
                    id="name"
                    placeholder="نام"
                  />
                </fieldset>
              </div>
              <div class="col-md-6 col-sm-12" style="direction: rtl">
                <fieldset>
                  <input
                    style="
                      width: 100%;
                      height: 46px;
                      border: 1px solid #eee;
                      font-size: 13px;
                      text-transform: uppercase;
                      font-weight: 500;
                      color: #7a7a7a;
                      outline: none;
                      padding: 0px 15px;
                      margin-bottom: 30px;
                      border-radius: 5px;
                    "
                    name="email"
                    type="text"
                    id="email"
                    placeholder="ایمیل"
                  />
                </fieldset>
              </div>
              <div class="col-md-6 col-sm-12" style="direction: rtl">
                <fieldset>
                  <input
                    style="
                      width: 100%;
                      height: 46px;
                      border: 1px solid #eee;
                      font-size: 13px;
                      text-transform: uppercase;
                      font-weight: 500;
                      color: #7a7a7a;
                      outline: none;
                      padding: 0px 15px;
                      margin-bottom: 30px;
                      border-radius: 5px;
                    "
                    name="password"
                    type="password"
                    id="password"
                    placeholder="رمز عبور"
                  />
                </fieldset>
              </div>
              <div class="col-md-6 col-sm-12" style="direction: rtl">
                <fieldset>
              <input
              style="
                width: 100%;
                height: 46px;
                border: 1px solid #eee;
                font-size: 13px;
                text-transform: uppercase;
                font-weight: 500;
                color: #7a7a7a;
                outline: none;
                padding: 0px 15px;
                margin-bottom: 30px;
                border-radius: 5px;
              "
                  type="password"
                  class="form-control"
                  id="confirm-password"
                  name="confirm_pass"
                  placeholder="تکرار عبور"
            />
          </fieldset>
        </div>
              <div class="col-md-6 col-sm-12" style="direction: rtl">
                <button
                  type="submit"
                  id="form-submit"
                  style="
                    background-color: #20232e;
                    color: #eee;
                    width: 100%;
                    height: 45px;
                    border-radius: 5px;
                    cursor: pointer;
                  "
                >
                  ثبت نام
                </button>
                <br />
                <br />
              </div>
            </div>
          </form>

        </div>
      </div>
    </div>

    <footer style="width: 100%;"><%- include('../../partials/footer'); %></footer>

    <!-- Bootstrap core JavaScript -->
    <script src="../../../../public/vendor/jquery/jquery.min.js"></script>
    <script src="../../../../public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Additional Scripts -->
    <script src="../../../../public/assets/js/custom.js"></script>
    <script src="../../../../public/assets/js/owl.js"></script>
    <script src="../../../../public/assets/js/slick.js"></script>
    <script src="../../../../public/assets/js/isotope.js"></script>
    <script src="../../../../public/assets/js/accordions.js"></script>

    <script language="text/Javascript">
      cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
      function clearField(t) {
        //declaring the array outside of the
        if (!cleared[t.id]) {
          // function makes it static and global
          cleared[t.id] = 1; // you could use true and false, but that's more typing
          t.value = ""; // with more chance of typos
          t.style.color = "#fff";
        }
      }
    </script>
  </body>
</html>



